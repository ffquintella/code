<!doctype html>
<html>

<head>
    <script src="{{ base_url }}/js/jquery.min.js"></script>
    <script src="{{ base_url }}/js/bootstrap.min.js"></script>
    <title>{% block title %}LessRisk: Open Source Risk Management{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type">
    <link rel="stylesheet" href="{{ base_url }}/css/bootstrap.css">
    <link rel="stylesheet" href="{{ base_url }}/css/bootstrap-responsive.css">
    <link rel="shortcut icon" href="{{ base_url }}/webapp/favicon.ico" type="image/x-icon">
    <link rel="icon" href="{{ base_url }}/favicon.ico" type="image/x-icon">
    <script type="text/javascript">
        {% block javascript %}{% endblock %}
    </script>
</head>
<body>

<link rel="stylesheet" href="{{ base_url }}/css/bootstrap.css">
<link rel="stylesheet" href="{{ base_url }}/css/bootstrap-responsive.css">
<link rel="stylesheet" href="{{ base_url }}/css/divshot-util.css">
<link rel="stylesheet" href="{{ base_url }}/css/divshot-canvas.css">
<link rel="stylesheet" href="{{ base_url }}/css/display.css">
<div class="navbar">
    {% block navbar %}
    <div class="navbar-inner">
        <div class="container">
            <a class="brand" href="https://github.com/ffquintella/lessrisk">LessRisk</a>

            <div class="navbar-content">
                <ul class="nav">
                    <li class="active">
                        <a href="index.php">{{ Home }}</a>
                    </li>
                    <li>
                        <a href="{{ base_url }}/management/index.php">{{ RiskManagement }}</a>
                    </li>
                    <li>
                        <a href="{{ base_url }}/reports/index.php">{{ Reporting }}</a>
                    </li>
                    {% if admin %}
                        <li>
                        <a href="{{ base_url }}/admin/index.php"> {{ Configure }}</a>
                        </li>
                    {% endif %}
                    </ul>
                </div>

            {% if session_access %}
            <div class="btn-group pull-right">
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">{{ session_name }}<span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li>
                    <a href="account/profile.php"> {{ MyProfile }} </a>
                </li>
                <li>
                    <a href="logout.php">{{ Logout }}</a>
                </li>
                </ul>
            </div>
        {% endif %}

    </div>
</div>
{% endblock %}
</div>
<div class="container-fluid">
    {% block content %}
{% endblock %}
</div>
</body>

</html>